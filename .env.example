# Server configuration
SERVER_IP=192.168.1.x
TIMEZONE=America/New_York
DNS_PORT=53

# Pi-hole configuration
PIHOLE_WEBPASSWORD=change_this_password

# Pi-hole UI settings (exposed on port 80)
TEMPERATURE_UNIT=f
WEBUI_BOXED_LAYOUT=boxed
WEB_THEME=default-dark

# Watchtower configuration
WATCHTOWER_SCHEDULE=0 0 4 * * 0
ENABLE_NOTIFICATIONS=disabled
NOTIFICATION_URL=

# Fallback DNS server (used if Pi-hole fails)
FALLBACK_DNS=1.1.1.1